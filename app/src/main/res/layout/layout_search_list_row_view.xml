<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginEnd="15dp"
    android:layout_marginStart="15dp">

    <ImageView
        android:id="@+id/search_imageView"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp" />

    <TextView
        android:id="@+id/search_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/search_imageView"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/location_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_name_textView"
        android:layout_toEndOf="@+id/search_imageView"
        android:textColor="#808080"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/dateTime_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_textView"
        android:layout_toEndOf="@+id/search_imageView"
        android:textColor="#808080"
        android:textSize="12sp" />


    <!--<View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#ffcdcdcd"/>-->

</RelativeLayout>
